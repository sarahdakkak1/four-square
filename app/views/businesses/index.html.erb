    <h1>Businesss</h1>
<div class="title">
    <a href="businesses/new", style="float: right;", class="btn btn-success">Add shops</a></span>
    </div>
        <% if @businesses.any? %>
        <% @businesses.each do |business| %>
          <div class="container">
          <table class="table table-hover">
                <thead>
                  <tr>
                <th>business Name</th>
                <th>Description</th>
                <th>Reviews</th>
                 </tr>
                    </thead>
                          <tbody>
                                <tr>
                                  <td>
                                <h4><%= link_to business.name, business_path(business.slug) %></h4>
                            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path business.photos[0].key, height: 300, width: 400, crop: :fill %>')">
                                  <td>
                                    <td>
                                    <p><%= business.address %></p>
                                    <%# link_to "Edit #{business.name}", edit_business_path(business), class:"btn btn-default" %>
                                    <%# link_to "Delete #{business.name}", business_path(business), method: :delete, class:"btn btn-default" %>
                                  </td>
                                  <td>
                                  <%# business.reviews.each do |review| %>
                                    <p><%#review.content %></p>
                                  <%# end %>
                                    <h5>Average rating: <%#star_rating(business.average_rating) %></h5>
                                  <%# link_to "Review #{business.name}", new_business_review_path(business), class:"btn btn-default" %>
                                  </td>
                                </tr>
                          </tbody>
                          </table>
                          <% end %>
                          <%else %>
                          <h1>No businesses yet</h1>
                    <% end %>
  </div>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
